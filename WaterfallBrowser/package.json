{
   "name": "waterfallbrowser",
   "version": "0.1.0",
   "private": true,
   "dependencies": {
      "@fluidframework/azure-client": "^2.11.0",
      "@testing-library/user-event": "^13.5.0",
      "@types/node": "^16.18.122",
      "@types/react": "^18.3.16",
      "@types/react-dom": "^18.3.5",
      "axios": "^1.7.9",
      "axios-retry": "^4.5.0",
      "gpt4-tokenizer": "^1.3.0",
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "typescript": "^5.7.2",
      "web-vitals": "^2.1.4"
   },
   "scripts": {
      "clean": "rimraf src/CommonTs/src",
      "pull": "bash -c 'mkdir -p src/CommonTs/src && cp -r ../CommonTs/src/* src/CommonTs/src'",      
      "build": "npm run pull && npx esbuild src/App.tsx --outfile=dist/waterfall.min.js --minify --bundle",
      "test": "mocha --debug-brk --exit --require ts-node/register test/*.test.tsx",
      "start-react": "react-scripts start",
      "build-react": "npm run pull && react-scripts build",
      "test-react": "react-scripts test --watchAll=false",
      "eject-react": "react-scripts eject"
   },
   "moduleNameMapper": {
      "\\.(css)$": "jest-css-modules"
   },
   "babel": {
      "presets": [
         [
            "@babel/preset-env",
            {
               "targets": {
                  "node": "current"
               }
            }
         ],
         "@babel/preset-typescript"
      ]
   },
   "eslintConfig": {
      "extends": [
         "react-app",
         "react-app/jest"
      ]
   },
   "browserslist": {
      "production": [
         ">0.2%",
         "not dead",
         "not op_mini all"
      ],
      "development": [
         "last 1 chrome version",
         "last 1 firefox version",
         "last 1 safari version"
      ]
   },
   "devDependencies": {
      "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
      "@babel/preset-typescript": "^7.26.0",
      "@fluentui/react-components": "^9.56.5",
      "@testing-library/react": "^16.1.0",
      "@types/chai": "^5.0.1",
      "@types/mocha": "^10.0.10",
      "@types/pako": "^2.0.3",
      "chai": "^5.1.2",
      "esbuild": "^0.25.0",
      "global-jsdom": "^25.0.0",
      "ignore-styles": "^5.0.1",
      "mocha": "^11.0.1",
      "pako": "^2.1.0",
      "rimraf": "^6.0.1",
      "scheduler": "^0.22.0",
      "ts-jest": "^29.2.5",
      "ts-node": "^10.9.2"
   },
   "homepage": "/wfbr"
}
