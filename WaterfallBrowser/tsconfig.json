{
   "compilerOptions": {
      "target": "ES2022",
      "lib": [
         "ES2022",
         "dom",
         "dom.iterable",
         "esnext"
      ],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "noEmitOnError": true,
      "removeComments": false,
      "jsx": "react",
      "declaration": true, 
      "declarationMap": true, 
      "composite": true,
      "sourceMap": true,
      "allowJs": true,
      "checkJs": false      
   },
   "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts",
      "__tests__/**/*.tsx",
      "__tests__/**/*.ts", 
      "src/CommonTs/src/*.ts", "test/ChunkTestHelpers.tsx"],       
   "exclude": [
      "./node_modules"
   ],
   "awesomeTypescriptLoaderOptions": {
      "useCache": true,
      "useBabel": true
   },
   "strictPropertyInitialization": true,
   "ts-node": {
      // Tell ts-node CLI to install the --loader automatically
      "esm": true
   },
   "references": [
      {
         "path": "../CommonTs"
      }
   ]
}